{
    "compilerOptions": {
        "lib": ["es2018"],
        "module": "commonjs",
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "src/types/*"
            ]
        },
        "typeRoots": ["./node_modules/@types/"]
    },
    "include": [
        "src/**/*"
    ]
}
